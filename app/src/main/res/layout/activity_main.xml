<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricky.twoactivites_muhammadrickyrizaldy20.MainActivity">

    <TextView
        android:text="@string/text_header_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textheader_reply"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textheader_reply"
        android:layout_alignLeft="@+id/textheader_reply"
        android:layout_alignStart="@+id/textheader_reply"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:id="@+id/text_message_repply"
        android:visibility="invisible"
        android:freezesText="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <Button
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_main"
        android:onClick="launchSecondActivity"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:ems="10"
        tools:layout_editor_absoluteY="452dp"
        android:id="@+id/editText_main"
        app:layout_constraintRight_toLeftOf="@+id/button_main"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:hint="Enter YOour Message Here"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
