<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_secondactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricky.twoactivites_muhammadrickyrizaldy20.Secondactivity">

    <TextView
        android:text="Message Received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textheader"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_message"
        android:freezesText="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textheader"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textheader" />

    <Button
        android:text="@string/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_second"

        android:onClick="returnReply"
        android:layout_marginStart="19dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_second"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/editText_second"
        android:layout_marginLeft="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:ems="10"
        tools:layout_editor_absoluteY="441dp"
        android:id="@+id/editText_second"
        android:hint="@string/editText_second"
        android:layout_marginStart="35dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp" />
</android.support.constraint.ConstraintLayout>
